<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>DocSearch</name>
  <version>1.0</version>
  <vendor email="egoredmc@gmail.com">EgoRedMC</vendor>

  <description><![CDATA[
      Simple plugin for searching Java documentation
    ]]></description>

  <change-notes><![CDATA[
      Plugin was made
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
      <action id="opendoc" class="OpenDocumentation" text="Open Java Documentation"
              description="Opens documentation at docs.oracle.com">
          <add-to-group group-id="EditSmartGroup" anchor="first"/>
          <mouse-shortcut keymap="Ctrl+Shift+Button1 Click" keystroke="Open doc"/>
      </action>
      <action id="openallclasses" class="OpenAllClasses" text="Open Documentation&#39;s &quot;All Classes&quot; page"
              description="Open documentation&#39;s page with all default classes">
          <add-to-group group-id="EditSmartGroup" anchor="first"/>
      </action>
  </actions>

</idea-plugin>