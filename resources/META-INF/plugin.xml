<idea-plugin url="https://github.com/EgoRedMC/DocSearchPlugin">
  <id>DocSearch</id>
  <name>DocSearch</name>
  <version>1.13</version>
  <vendor email="egoredmc@gmail.com">EgoRedMC</vendor>

  <description>
      Simple plugin for searching Java documentation
      Also adds some usefull hotkeys
  </description>

  <change-notes>
      Added off topic actions:
      Wrapping with System.out.println()
      Wrapping with Integer.parseInt()
  </change-notes>

  <idea-version since-build="173.0"/>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
      <action id="opendoc" class="OpenDocumentation" text="Open Java Documentation for specified class"
              description="Opens documentation at docs.oracle.com">
      </action>
      <action id="openallclasses" class="OpenAllClasses" text="Open Documentation&#39;s &quot;All Classes&quot; page"
              description="Open documentation&#39;s page with all default classes">
      </action>
      <action id="sout" class="Sout" text="Wrap line with sout"
              description="Wraps line with System.out.println()">
      </action>
      <action id="parseInt" class="ParseInt" text="Wrap selected text with parseInt"
              description="Wraps selected text with Integer.parseInt()">
      </action>
  </actions>

</idea-plugin>